<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
	<application>
		<message-bundle>resources.application</message-bundle>
		<locale-config>
			<default-locale>en</default-locale>
		</locale-config>
	</application>
	<managed-bean>
		<managed-bean-name>loginController</managed-bean-name>
		<managed-bean-class>org.wbd.controller.LoginController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		<managed-property>
			<property-name>user</property-name>
			<property-class>org.wbd.model.User</property-class>
			<value></value>
		</managed-property>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>user</managed-bean-name>
		<managed-bean-class>org.wbd.model.User</managed-bean-class>
		<managed-bean-scope>none</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>post</managed-bean-name>
		<managed-bean-class>org.wbd.model.Post</managed-bean-class>
		<managed-bean-scope>none</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>comment</managed-bean-name>
		<managed-bean-class>org.wbd.model.Comment</managed-bean-class>
		<managed-bean-scope>none</managed-bean-scope>
	</managed-bean>

</faces-config>
